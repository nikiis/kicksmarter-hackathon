{
    "name": "backend",
    "version": "0.1.0",
    "description": "",
    "engines": {
        "node": ">=19.0.0"
    },
    "main": "./src/app.ts",
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "src",
            "config"
        ],
        "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/app.ts",
        "ext": "ts, js"
    },
    "scripts": {
        "test": "jest  --watchAll --verbose",
        "start": "node -r tsconfig-paths/register -r ts-node/register ./build/src/app.js",
        "dev": "nodemon",
        "build": "rimraf ./build && tsc"
    },
    "dependencies": {
        "@apollo/server": "^4.5.0",
        "@types/lodash": "^4.14.192",
        "compression": "^1.7.4",
        "config": "^3.3.9",
        "cors": "^2.8.5",
        "debug": "^4.3.4",
        "express": "^4.18.2",
        "express-async-errors": "^3.1.1",
        "graphql": "^16.6.0",
        "helmet": "^6.0.1",
        "joi": "^17.8.4",
        "mongodb": "^4.14.0",
        "mongoose": "^7.0.2",
        "morgan": "^1.10.0",
        "rimraf": "^4.4.1",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "winston": "^3.8.2"
    },
    "devDependencies": {
        "@types/compression": "^1.7.2",
        "@types/config": "^3.3.0",
        "@types/cors": "^2.8.13",
        "@types/debug": "^4.1.7",
        "@types/express": "^4.17.17",
        "@types/morgan": "^1.9.4",
        "@types/node": "^18.15.3",
        "eslint": "8.35.0",
        "jest": "^26.6.3",
        "supertest": "^6.1.1",
        "typescript": "^5.0.2"
    },
    "author": "Montvydas Klumbys",
    "license": "ISC"
}
